<Window x:Class="Godzillar.Dialogs.FilterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Godzillar.Dialogs"
        mc:Ignorable="d"
        Title="筛选" Height="300" Width="220" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ListBox Grid.Row="0" Name="DistinctValueList" Height="200" Margin="5, 2, 5, 0"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Name="Determine" Click="Determine_Click" Content="确定" Width="80" Margin="19,20,8,20" Foreground="White" Background="#FF6E6868"/>
            <Button Name="Cancel" Click="Cancel_Click" Content="取消" Width="80" Margin="8,20" Foreground="#FF575757" Background="#FFFBF8F8"/>
        </StackPanel>
    </Grid>
</Window>
