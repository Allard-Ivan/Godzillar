<Window x:Class="Godzillar.Dialogs.CellWidthDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Godzillar.Dialogs"
        mc:Ignorable="d"
        Title="调整列宽" Height="110" Width="250" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ComboBox Grid.Row="0" Grid.Column="0" Name="ColumnName" Width="150" Margin="4, 10" DisplayMemberPath="Content"/>
        <TextBox Grid.Row="0" Grid.Column="1" Name="WidthValue" Height="21" Margin="4, 10"/>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="4">
            <Button Margin="0" Name="Determine" Click="Determine_Click"  Foreground="#FF575757" Background="#FFFBF8F8">确定</Button>
        </StackPanel>
    </Grid>
</Window>
